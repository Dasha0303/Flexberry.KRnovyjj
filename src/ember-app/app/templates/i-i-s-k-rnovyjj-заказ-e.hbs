<h3 class="ui header">{{t "forms.i-i-s-k-rnovyjj-заказ-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерЗаказа
      class=(if (v-get validationModel "номерЗаказа" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.номерЗаказа-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-номерЗаказа=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерЗаказа" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИОЗакзачика
      class=(if (v-get validationModel "фИОЗакзачика" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.фИОЗакзачика-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-фИОЗакзачика=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИОЗакзачика" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.адресЗаказа
      class=(if (v-get validationModel "адресЗаказа" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.адресЗаказа-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-адресЗаказа=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адресЗаказа" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.способДоставки
      class=(if (v-get validationModel "способДоставки" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.способДоставки-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-способДоставки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "способДоставки" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.материал
      class=(if (v-get validationModel "материал" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.материал-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-материал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "материал" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колво
      class=(if (v-get validationModel "колво" "isInvalid") "error")
      label=(t "forms.i-i-s-k-rnovyjj-заказ-e.колво-caption")
      data-test-i-i-s-k-rnovyjj-заказ-e-колво=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "колво" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-rnovyjj-заказ-e.отпускМатериала-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.отпускМатериала
      displayAttributeName="датаПроводки"
      autocomplete=true
      relationName="отпускМатериала"
      projection="ОтпускМатериалаL"
      title=(t "forms.i-i-s-k-rnovyjj-заказ-e.отпускМатериала-caption")
      readonly=readonly
      componentName="отпускМатериалаLookup"
      class=(if (v-get validationModel "отпускМатериала" "isInvalid") "error")
      data-test-i-i-s-k-rnovyjj-заказ-e-отпускМатериала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отпускМатериала" "message")}}
  </div>
</form>
